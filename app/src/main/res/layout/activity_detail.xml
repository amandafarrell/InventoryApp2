<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    android:padding="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Product Name-->
        <TextView
            android:id="@+id/text_view_product_name_label"
            style="@style/DetailLabelsTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_activity_label_product_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_text_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_product_name_label"
            tools:text="Inventory Name" />

        <!--Product Price-->
        <TextView
            android:id="@+id/text_view_product_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DetailLabelsTheme"
            android:text="@string/detail_activity_label_product_price"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_product_name" />

        <EditText
            android:id="@+id/edit_text_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_product_price_label"
            tools:text="$4.00 " />

        <!--Product Quantity-->
        <TextView
            android:id="@+id/text_view_product_quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DetailLabelsTheme"
            android:text="@string/detail_activity_label_product_quantity"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_product_price" />

        <EditText
            android:id="@+id/edit_text_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_product_quantity_label"
            tools:text="100" />

        <!--Supplier Name-->
        <TextView
            android:id="@+id/text_view_product_supplier_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DetailLabelsTheme"
            android:text="@string/detail_activity_label_supplier_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_product_quantity" />

        <EditText
            android:id="@+id/edit_text_product_supplier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_product_supplier_name_label"
            tools:text="Supplier Name " />

        <!--Supplier Phone Number-->
        <TextView
            android:id="@+id/text_view_product_supplier_phone_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            style="@style/DetailLabelsTheme"
            android:text="@string/detail_activity_label_supplier_phone_number"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_product_supplier_name" />

        <EditText
            android:id="@+id/edit_text_product_supplier_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_product_supplier_phone_number_label"
            tools:text="201-123-4567" />


        <!--Buttons-->
        <Button
            android:id="@+id/button_decrease_inventory"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/button_label_decrease_inventory"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_product_supplier_phone_number" />

        <Button
            android:id="@+id/button_increase_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_label_increase_inventrory"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_decrease_inventory" />

        <Button
            android:id="@+id/button_delete_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_label_delete_product"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_increase_inventory" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>